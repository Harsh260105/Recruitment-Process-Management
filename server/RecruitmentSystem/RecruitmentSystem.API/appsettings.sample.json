{
    "ConnectionStrings": {
        "DefaultConnection": "Server=YOUR_SQL_SERVER;Database=YOUR_DATABASE_NAME;Trusted_Connection=True;MultipleActiveResultSets=True;TrustServerCertificate=True;Pooling=True;Min Pool Size=5;Max Pool Size=100;"
    },
    "Jwt": {
        "SecretKey": "YOUR_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG",
        "Issuer": "RecruitmentSystem",
        "Audience": "RecruitmentSystemUsers",
        "ExpireDays": "7",
        "RefreshTokenDays": "30"
    },
    "Resend": {
        "ApiKey": "YOUR_RESEND_API_KEY",
        "FromEmail": "onboarding@resend.dev",
        "FromName": "ROIMA Recruitment System"
    },
    "MailKit": {
        "SmtpHost": "sandbox.smtp.mailtrap.io",
        "SmtpPort": "587",
        "Username": "YOUR_SMTP_USERNAME",
        "Password": "YOUR_SMTP_PASSWORD",
        "FromEmail": "recruitmentsystem@roima.com",
        "FromName": "ROIMA Recruitment System"
    },

    "AppSettings": {
        "FrontendUrl": "http://localhost:5173",
        "CandidateDashboardUrl": "http://localhost:5173/candidate/dashboard",
        "StaffDashboardUrl": "http://localhost:5173/recruiter/dashboard",
        "EmailVerificationUrl": "http://localhost:5173/auth/confirm-email",
        "PasswordResetUrl": "http://localhost:5173/auth/reset-password",
        "BusinessTimeZone": "Asia/Kolkata",
        "BusinessStartHourUtc": 4.5,
        "BusinessEndHourUtc": 12.5
    },
    "AWS": {
        "S3": {
            "BucketName": "YOUR_S3_BUCKET_NAME",
            "Region": "ap-south-1",
            "AccessKey": "YOUR_AWS_ACCESS_KEY",
            "SecretKey": "YOUR_AWS_SECRET_KEY"
        }
    },
    "GoogleMeet": {
        "IsEnabled": false,
        "ClientId": "YOUR_GOOGLE_CLIENT_ID",
        "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET",
        "RefreshToken": "YOUR_GOOGLE_REFRESH_TOKEN",
        "OrganizerEmail": "your-organizer-email@gmail.com"
    },
    "Automation": {
        "SystemUserId": "00000000-0000-0000-0000-000000000000",
        "InterviewReminderHoursAhead": 6,
        "EvaluationReminderHoursAfter": 24,
        "RefreshTokenRetentionDays": 7
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}